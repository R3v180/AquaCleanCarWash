# File: /apps/server/.env.example - v1.0

# --- Base de Datos y Servidor ---
# URL de conexión a tu base de datos PostgreSQL
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"
# Puerto en el que se ejecutará el servidor de la API
PORT=3001

# --- Autenticación ---
# Secreto para firmar los JSON Web Tokens (JWT). Usa algo largo y aleatorio.
JWT_SECRET="un-secreto-muy-largo-y-dificil-de-adivinar-para-produccion"
# Duración de la validez del token (en segundos). 604800s = 7 días
JWT_EXPIRES_IN="604800s"

# --- CORS ---
# El origen permitido para hacer peticiones a la API (la URL de tu frontend)
CORS_ALLOWED_ORIGIN="http://localhost:5173"

# --- Configuración de Email (Nodemailer para SMTP) ---
# Estos valores se usarán en el script de seed para autoconfigurar la BBDD.
# Rellénalos en tu archivo .env local para que las notificaciones funcionen.
EMAIL_HOST=""
EMAIL_PORT=""
EMAIL_USER=""
EMAIL_PASS=""
EMAIL_FROM="Tu Negocio <tu@email.com>"
# Email al que se enviarán las notificaciones para la empresa
EMAIL_TO=""

# --- Configuración de WhatsApp (Twilio) ---
# Estos valores se usarán en el script de seed para autoconfigurar la BBDD.
# Rellénalos en tu archivo .env local.
TWILIO_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""