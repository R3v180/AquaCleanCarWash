// 1. Configuraci贸n del Cliente de Prisma
generator client {
  provider = "prisma-client-js"
}

// 2. Configuraci贸n de la Conexi贸n a la Base de Datos
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 3. Definici贸n de los Modelos de Datos
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String?
  image         String?
  role          UserRole  @default(CUSTOMER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum UserRole {
  ADMIN
  CUSTOMER
}